<div class='row'>
	<div class="col-md-1"></div>
	<div class="col-md-10">
		<table class='table table-hover'>
			<thead>
				<tr>
					<th>
						Package #
					</th>
					<th>
						Shipping From Address
					</th>
					<th>
						Shipping To Address
					</th>
					<th>
						Package size
					</th>
					<th>
						Package Deadline
					</th>
					<th>
						Price
					</th>
				</tr>
			</thead>


			<tbody>
				<tr class='  '>
					<td>
						<%= @order.id %>
					</td>
					<td>
						<%= @order.shipping_from.address %>
					</td>
					<td>
						<%= @order.shipping_to.address %>
					</td>
					<td>
						NA
					</td>
					<td>
						NA
					</td>
					<td>
						<%= number_to_currency(@order.subtotal) %>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="col-md-1"></div>
</div>


<%= form_tag "/sending_shipments/#{@order.id}", :method => :patch do %>
	<div class="form-actions mg-t-lg">
			<div class="row">
				<div class="col-md-9 col-md-offset-3">	
					<%= submit_tag "Present package to prospective shippers!", :class => 'btn btn-contrast' %>
				</div>
			</div>
		</div>
<% end %>